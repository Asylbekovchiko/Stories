<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StoryProgressLIne">
        <attr name="progressBackgroundColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="progressGradientStartColor" format="color"/>
        <attr name="progressGradientEndColor" format="color"/>
        <attr name="progressPercent" format="integer"/>
        <attr name="animateProgress" format="boolean"/>
        <attr name="animationDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StoryProgressBar">
        <attr name="progressBackgroundColor" />
        <attr name="progressColor" />
        <attr name="animationDuration" />
        <attr name="progressBarCount" format="integer" />
        <attr name="barsHeight" format="dimension" />
        <attr name="gapBetweenBars" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BadgeCardView">
        <attr name="title"/>
        <attr name="titleTextColor"/>
        <attr name="icon"/>
        <attr name="cardBackground"/>
    </declare-styleable>
